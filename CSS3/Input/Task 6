styles.css

/* Reset Default Margin & Padding */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* Link Styling */
a:link {
  color: #007BFF;
  text-decoration: none;
}
a:visited {
  color: #5a5a5a;
}
a:hover {
  color: #FF4500;
  text-decoration: underline;
}
a:active {
  color: #FF0000;
}

/* Navigation Menu Styling */
.nav-menu {
  list-style-type: none;         /* Remove bullets */
  list-style-position: inside;
  display: flex;
  gap: 20px;
  padding: 15px;
  background-color: #f0f0f0;
}

.nav-menu li {
  padding: 5px 10px;
}

/* Event List Styling */
.event-list {
  list-style-type: square;      /* Change bullet style */
  list-style-position: outside;
  margin: 20px;
  padding-left: 40px;
}

.event-list li {
  padding: 8px 0;
  font-size: 18px;
}
