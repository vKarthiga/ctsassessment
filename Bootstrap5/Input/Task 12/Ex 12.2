<!DOCTYPE html>
<html lang="en" >
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Bootstrap Pricing Section with Spacing</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
</head>
<body>
  <div class="container py-5">
    <h1 class="text-center mb-5">Pricing Plans</h1>

    <div class="row g-4">
      <!-- Basic Plan -->
      <div class="col-md-4">
        <div class="card p-4 h-100">
          <div class="card-body d-flex flex-column">
            <h3 class="card-title mb-3">Basic</h3>
            <h4 class="mb-3">$9.99 / month</h4>
            <ul class="list-unstyled flex-grow-1 mb-4">
              <li class="mb-2">10 Projects</li>
              <li class="mb-2">5 GB Storage</li>
              <li class="mb-2">Basic Support</li>
            </ul>
            <button class="btn btn-primary mt-auto">Choose Basic</button>
          </div>
        </div>
      </div>

      <!-- Standard Plan -->
      <div class="col-md-4">
        <div class="card p-4 h-100 border-primary">
          <div class="card-body d-flex flex-column">
            <h3 class="card-title mb-3">Standard</h3>
            <h4 class="mb-3">$19.99 / month</h4>
            <ul class="list-unstyled flex-grow-1 mb-4">
              <li class="mb-2">50 Projects</li>
              <li class="mb-2">50 GB Storage</li>
              <li class="mb-2">Priority Support</li>
            </ul>
            <button class="btn btn-primary mt-auto">Choose Standard</button>
          </div>
        </div>
      </div>

      <!-- Premium Plan -->
      <div class="col-md-4">
        <div class="card p-4 h-100">
          <div class="card-body d-flex flex-column">
            <h3 class="card-title mb-3">Premium</h3>
            <h4 class="mb-3">$39.99 / month</h4>
            <ul class="list-unstyled flex-grow-1 mb-4">
              <li class="mb-2">Unlimited Projects</li>
              <li class="mb-2">200 GB Storage</li>
              <li class="mb-2">24/7 Support</li>
            </ul>
            <button class="btn btn-primary mt-auto">Choose Premium</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
  ></script>
</body>
</html>
