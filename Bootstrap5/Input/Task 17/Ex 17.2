<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Icon Buttons</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body class="p-4">

  <h3 class="mb-3">Icon-Only Buttons</h3>

  <!-- Search Button -->
  <button class="btn btn-primary me-2" title="Search">
    <i class="bi bi-search"></i>
  </button>

  <!-- Delete Button -->
  <button class="btn btn-danger me-2" title="Delete">
    <i class="bi bi-trash"></i>
  </button>

  <!-- Edit Button -->
  <button class="btn btn-warning me-2" title="Edit">
    <i class="bi bi-pencil-square"></i>
  </button>

  <!-- Add User Button -->
  <button class="btn btn-success" title="Add User">
    <i class="bi bi-person-plus-fill"></i>
  </button>

</body>
</html>
