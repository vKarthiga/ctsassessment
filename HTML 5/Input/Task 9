<body>

  <h2>üìç Locate the Nearest Event</h2>
  <button onclick="findNearbyEvents()">Find Nearby Events</button>
  <div id="location"></div>

  <script>
    function findNearbyEvents() {
      const locationDiv = document.getElementById('location');

      if (!navigator.geolocation) {
        locationDiv.textContent = "‚ùå Geolocation is not supported by your browser.";
        return;
      }

      locationDiv.textContent = "üîç Locating...";

      const options = {
        enableHighAccuracy: true,
        timeout: 10000,
        maximumAge: 0
      };

      navigator.geolocation.getCurrentPosition(success, error, options);

      function success(position) {
        const latitude = position.coords.latitude;
        const longitude = position.coords.longitude;
        locationDiv.innerHTML = `
          ‚úÖ Coordinates Found!<br>
          üåê Latitude: ${latitude}<br>
          üåê Longitude: ${longitude}<br>
          üì° Accuracy: ${position.coords.accuracy} meters
        `;
      }

      function error(err) {
        switch (err.code) {
          case err.PERMISSION_DENIED:
            locationDiv.textContent = "‚ùó Permission to access location was denied.";
            break;
          case err.POSITION_UNAVAILABLE:
            locationDiv.textContent = "‚ö†Ô∏è Location information is unavailable.";
            break;
          case err.TIMEOUT:
            locationDiv.textContent = "‚è∞ Location request timed out.";
            break;
          default:
            locationDiv.textContent = "‚ùå An unknown error occurred.";
            break;
        }
      }
    }
  </script>

</body>
</html>
